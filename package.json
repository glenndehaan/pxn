{
  "name": "pxn",
  "version": "0.0.0",
  "description": "Plex XMLTV Netherlands",
  "bin": "src/bundle.js",
  "scripts": {
    "prestart": "rimraf ./dist",
    "start": "nodemon --watch src --exec 'npm run lint && node ./src/index.js --'",
    "prebuild": "rimraf ./dist",
    "build": "pkg ./package.json --targets latest-linux-x64,latest-macos-x64,latest-win-x64 --out-path ./dist",
    "lint": "eslint -c ./package.json ./"
  },
  "engines": {
    "node": "^8.0.0"
  },
  "author": "Glenn de Haan",
  "license": "MIT",
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "no-console": 0,
      "comma-dangle": [
        "error",
        "never"
      ],
      "indent": [
        "error",
        4
      ]
    },
    "extends": [
      "eslint:recommended"
    ]
  },
  "pkg": {
    "assets": [
      "_scripts/config/*",
      "src/**/*.js",
      "LICENCE",
      "README.md"
    ]
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "nodemon": "^2.0.4"
  },
  "dependencies": {
    "commander": "^5.1.0",
    "deepmerge": "^4.2.2",
    "node-fetch": "^2.6.1",
    "pkg": "^4.4.9",
    "rimraf": "^3.0.2",
    "xmlbuilder2": "^2.4.0"
  }
}
